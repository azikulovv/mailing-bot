{
  "name": "shop-bot",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/main.ts",
    "build": "tsc && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "start": "node -r tsconfig-paths/register dist/main.js"
  },
  "dependencies": {
    "@edjopato/telegraf-i18n": "^0.2.2",
    "dotenv": "^16.4.0",
    "telegraf": "^4.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/i18n": "^0.13.12",
    "@types/node": "^22.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
